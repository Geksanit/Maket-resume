mixin list-item(options)
    if (!options || (typeof(options) !== 'object'))
        - options = {}
    - options.title = options.title || 'title'
    - options.date = options.date || 'date'
    - options.place = options.place || 'place'
    - options.text = options.text || 'text'

    li.list-item
        span.list-item__title #{options.title}
        span.list-item__date #{options.date }
        p.list-item__place #{options.place}
        p.list-item__text !{options.text}
