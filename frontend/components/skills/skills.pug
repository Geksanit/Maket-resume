include ../header/header
include ../progress/progress

mixin skills__line(name,value)
    .skills__line
        .skills__name #{name}
        +progress({ mix: 'skills__progress-mix', max: 12, value: value })

mixin skills(options)
    - options = options || {}
    - options.list = options.list || []
    - options.mix = options.mix || ''

    section(class="skills " + options.mix)
        +header(options)
        .skills__container
            each skill in options.list
                +skills__line(skill[0], skill[1])
