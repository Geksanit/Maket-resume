include ../header/header
include ../list-item/list-item

mixin education(options)
    - options = options || {}
    - options.list = options.list || []
    - options.mix = options.mix || ''

    section(class="education " + options.mix)
        +header(options)
        ul.education__list
            each item in options.list
                +list-item(item)
