include ../line/line
mixin contact
    .contact
        +line({ title:'contact', src:'contact-icon' })
        p.contact__line
            span.contact__contact address
            span.contact__value Main Street, City.
        p.contact__line
            span.contact__contact e-mail
            span.contact__value contact@domain.com
        p.contact__line
            span.contact__contact phone
            span.contact__value 555-555-555
        p.contact__line
            span.contact__contact website
            span.contact__value www.yourweb.com