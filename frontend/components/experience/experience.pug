include ../header/header
include ../list-item/list-item

mixin experience(options)
    - options = options || {}
    - options.list = options.list || []
    - options.mix = options.mix || ''

    section(class="experience " + options.mix)
        .experience__header
            +header(options)
        ul.experience__list
            each item in options.list
                li.experience__item
                    +list-item(item)
