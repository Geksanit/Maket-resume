mixin avatar(options)
    if !options
        - options = {}
    - options.name = options.name || 'name'
    - options.surname = options.surname || 'surname'
    - options.profession = options.profession || 'profession'

    div(class="avatar")
        if (options.src)
            - var url = require('./icons/' + options.src + '.png')
            .avatar__circle
                img.avatar__circle-filler(src = url alt = "photo")
        else
            .avatar__circle
                .avatar__circle-filler
        .avatar__name #{options.name}
        .avatar__surname #{options.surname}
        .avatar__profession #{options.profession}